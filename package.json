{
  "name": "vsub",
  "version": "0.1.0",
  "description": "A Vue.js project",
  "author": "Dakad <akad@live.be>",
  "private": true,
  "scripts": {
    "gulp-watch": "gulp watch",
    "watchify": "watchify -vd  -e src/main.js -o dist/build.js",
    "serve": "http-server -o -c 1 -a 0.0.0.0 -p 8080",
    "dev": "NODE_ENV=dev npm-run-all --parallel gulp-watch watchify serve",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o dist/build.css ] -e src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "lodash.merge": "^4.6.0",
    "opensubtitles-api": "^4.0.0",
    "vue": "^2.4.0",
    "vue-router": "^2.7.0",
    "vue2-filters": "^0.1.9",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "http-server": "^0.9.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vueify": "^9.1.0",
    "watchify": "^3.4.0"
  }
}
